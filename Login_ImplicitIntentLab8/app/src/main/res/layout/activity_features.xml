<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features">

    <TextView
        android:id="@+id/features_text"
        android:layout_width="261dp"
        android:layout_height="82dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="@string/features"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/website_button"
        android:layout_width="115dp"
        android:layout_height="107dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_web_24" />


    <ImageButton
        android:id="@+id/call_button"
        android:layout_width="115dp"
        android:layout_height="107dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="200dp"
        android:contentDescription="@string/phone_call"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_call_24" />

    <ImageButton
        android:id="@+id/location_button"
        android:layout_width="115dp"
        android:layout_height="107dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="384dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_location_on_24" />

    <ImageButton
        android:id="@+id/mail_button"
        android:layout_width="115dp"
        android:layout_height="107dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="384dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_mail_24" />

</androidx.constraintlayout.widget.ConstraintLayout>