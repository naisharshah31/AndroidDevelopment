<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/features_text"
        android:layout_width="261dp"
        android:layout_height="82dp"
        android:layout_marginTop="28dp"
        android:text="@string/cities"
        android:gravity="center"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/delhi_button"
        android:layout_width="115dp"
        android:layout_height="107dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="200dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/delhi"
        android:background="@null"/>


    <ImageButton
        android:id="@+id/new_york_button"
        android:layout_width="115dp"
        android:layout_height="107dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/new_york"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/agra_button"
        android:layout_width="115dp"
        android:layout_height="107dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="384dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/agra"
        android:background="@null" />

    <ImageButton
        android:id="@+id/mumbai_button"
        android:layout_width="115dp"
        android:layout_height="107dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="384dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/mumbai"
        android:background="@null"/>

</androidx.constraintlayout.widget.ConstraintLayout>